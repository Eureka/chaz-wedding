{{setPageTitle "You are invited!"}}
{{setActiveNav "Invited"}}

<div class="l-contain">

    <h1><center>Please sign in to view this page.<center></h1>

    <form class="resend l-grid" action="/login" method="POST">
        <input type="hidden" name="_csrf" value="{{_csrf}}">
        <input type="text" name="email" placeholder="Email Address">

        <div class="resend-email l-grid-u">
            <input type="password" name="password" placeholder="Password">
        </div>

        <div class="resend-submit l-grid-u">
            <button type="submit" data-icon="s">Login</button>
        </div>
    </form>
</div>


